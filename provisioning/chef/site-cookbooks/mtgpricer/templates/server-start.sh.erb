#!/bin/bash
PID_PATH=/tmp/mtgpricer_webapp.pid
LOG_FILE=<%= @log %>

debug=0

while getopts "d" opt; do
    case "$opt" in
        d) debug=1
        ;;
    esac
done

CATALOG=/usr/share/mtgpricer/data/AllSets-x.json
OUTPUT_DIR=/usr/share/mtgpricer/data/priceData
JAR=/usr/share/mtgpricer/mtgpricer.jar

echo "Starting mtgpricer_webapp"
if [ ! -f $PID_PATH ]; then
    if [ $debug = 1 ]; then
        echo "Starting server on debug port 8888"
        nohup java -agentlib:jdwp=transport=dt_socket,server=y,suspend=n,address=8888 -Dcatalog.catalogFilePath=$CATALOG -Drip.outputDir=$OUTPUT_DIR -jar $JAR > $LOG_FILE </dev/null &
    else
        nohup java -Dcatalog.catalogFilePath=$CATALOG -Drip.outputDir=$OUTPUT_DIR -jar $JAR > $LOG_FILE </dev/null &
    fi 
    echo $! > $PID_PATH
    echo "mtgpricer_webapp started"
fi