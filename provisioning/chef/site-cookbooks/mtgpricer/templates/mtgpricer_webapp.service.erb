#!/bin/bash

PID_PATH=/tmp/mtgpricer_webapp.pid

case $1 in
    start)
        echo "Starting mtgpricer_webapp"
        if [ ! -f $PID_PATH ]; then
            nohup java -Dcatalog.catalogFilePath=/usr/share/mtgpricer/data/AllSets-x.json -jar /usr/share/mtgpricer/mtgpricer.jar 2>> /dev/null >> /dev/null &
                echo $! > $PID_PATH
            echo "mtgpricer_webapp started"
        fi
    ;;
    stop)
        if [ -f $PID_PATH ]; then
            PID=$(cat $PID_PATH);
            echo "Stopping mtgpricer_webapp"
            kill $PID;
            echo "Stopped mtgpricer_webapp"
            rm $PID_PATH
        fi
    ;;
esac